<div class="course-body">
  <div class="course-banner" style="background-image: url(<%= @course.photos.attached? ? cl_image_path(@course.photos[0].key) : 'https://picsum.photos/300/300' %>)">
    <div class="course-banner-cover">
      <div class="course-banner-info">
        <h1><%= @course.title %></h1>
        <h3>By Chef <%= @course.user.first_name %></h3>
        <div class="tags">
          <% @course.category_list.each do |t| %>
            <p class="tag"><%= t %></p>
          <% end %>
          <% @course.ingredient_list.each do |t| %>
            <p class="tag"><%= t %></p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="course-info-container">
      <div class="course-info-card">
        <h3 class="title">Pricing Info $$</h3>
        <p>Starting from <%= @course.price%>$ per person</p>
      </div>
      <div class="course-info-card">
        <h3 class="title">Course Description</h3>
        <p><%= @course.description%></p>
      </div>
      <div class="course-info-card">
        <h3 class="title">Our Chef</h3>
        <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nulla mauris turpis leo nam malesuada placerat est massa imperdiet. Vitae et dolor maecenas augue volutpat. Sem cursus vitae lectus sed.</p>
      </div>
      <div class="reviews">
        <h1 class="title">Our Customers Say...</h1>
        <div class="review">
          <% @course.reviews.each do |review| %>
            <div class="review-text">
              <p><%= review.content %></p>
            </div>
          <% end %>
        </div>
        <div class="review-text-box">
          <h4>Write a Review!</h4>
          <%= render 'components/review_text' %>
        </div>
      </div>
    </div>
    <div class="photo-form-container">
      <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
          <% @course.photos.each_with_index do |photo, index|%>
            <% if index == 0 %>
              <div class="carousel-item active">
                <img class="d-block w-100" src="<%=  cl_image_path(photo.key)%>" alt="slide <%= index %>">
              </div>
            <% else %>
              <div class="carousel-item">
                <img class="d-block w-100" src="<%=  cl_image_path(photo.key)%>" alt="slide <%= index %>">
              </div>
            <% end %>
          <% end %>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
      <div class="booking-form">
        <h3>Contact Chef <%= @course.user.first_name %> Right Away</h3>
        <p>Fill in your details and send a request to our Chef</p>
        <%= simple_form_for [@course, @booking] do |f| %>
          <%= f.input :location, placeholder: 'Tokyo', label: "The Where" %>
          <%= f.input :attendees, as: :numeric, label: 'The Who', input_html: { min: 1, max: 100, placeholder: 'Attendees' } %>
          <%= f.input :start_time, as: :datetime, html5: true%>
          <%= f.input :end_time, as: :datetime, html5: true%>
          <%= f.submit "Send a Request", class: "submit-btn" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
<%= javascript_pack_tag "course-show" %>
