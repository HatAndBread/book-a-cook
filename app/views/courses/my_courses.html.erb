        <div id="course-button">
          <%= link_to "Create Course", new_course_path, class: "search-btn" %>
        </div>
      </div>
      <div class="courses-cards">
        <div class="course_card" style="background-image: url('https://picsum.photos/300/300')">
          <div class="text-overlay">
            <div class="c-title">
              <h3>Tuna Steak Course</h3>
              <p>by Chef Massimo</p>
            </div>
            <div class="c-footer">
              <div class="tags">
                <p class="tag">vegetarian</p>
                <p class="tag">healthy</p>
              </div>
              <div class="icons">
                <i class="fas fa-share"></i>
