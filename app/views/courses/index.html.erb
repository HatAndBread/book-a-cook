<div class="background">
  <div class="header">
    <div class="header-overlay">
      <div class="header-title">
        <h2>Browse Through Our Chefs Best Creations For Inspiration</h2>
        <p>or filter results according to your favourite cuisine.</p>
      </div>
      <div class="search-filters form-row">
        <%= form_tag courses_path, method:"GET", class: 'form-inline' do %>
          <div class="form-group">
            <%= label_tag 'category', "Pick your fancy:", class: 'label' %>
            <%= select_tag :categories, options_for_select(Course::CATEGORIES), include_blank: "Select a cuisine", class: 'form-control' %>
            <%= label_tag 'ingredients', "For the more sophisticated:", class: 'label' %>
            <%= select_tag :categories, options_for_select(Course::INGREDIENTS), include_blank: "More options in here", class: 'form-control' %>
          </div>
          <div class="buttons">
            <%= submit_tag "Search", class: "search-btn" %>
            <%= link_to "Cancel", courses_path, class: "reset-btn" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="courses">
    <% @courses.each do |course| %>
      <%= link_to  course_path(course), class: 'c-link' do%>
        <div class="course_card" 
             data-aos="fade-up"
             data-aos-duration="1000"
             style="background-image: url(<%= course.photos.attached? ? cl_image_path(course.photos[0].key) : 'https://picsum.photos/300/300' %>)" 
             >
          <div class="text-overlay">
            <div class="c-title">
              <h3><%= course.title %></h3>
              <p>by Chef <%= course.user.first_name %></p>
            </div>
            <div class="c-footer">
              <div class="tags">
                <% course.category_list.each do |t| %>
                  <p class="tag"><%= t %></p>
                <% end %>
                <% course.ingredient_list.each do |t| %>
                  <p class="tag"><%= t %></p>
                <% end %>
              </div>
              <div class="icons">
                <i class="fas fa-share"></i>
                <i class="far fa-heart"></i>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
<%= javascript_pack_tag "courses-index" %>
