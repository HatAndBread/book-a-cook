<% if @course.reviews.empty? %>
  <div class="reviews">
    <h1 class="title">Be the first to review...</h1>
    <%= render 'components/modal' %>
  </div>
<% else %>
  <div class="reviews">
    <h1 class="title">Our Customers Say...</h1>
    <div class="review">
      <% @course.reviews.each do |review| %>
        <div class="review-text">
          <p id="review-<%= review.id %>"><%= review.content %></p>
        </div>
      <% end %>
    </div>
    <%= render 'components/modal' %>
  </div>
<% end %>
<button type="button" class="review-button" data-toggle="modal" data-target="#exampleModalScrollable">
  Write a Review
</button>
