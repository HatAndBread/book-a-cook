<div class="background">
  <div class="container" style="min-height: 70vh; padding: 32px;">
    <div class="row justify-content-center">
      <div class="col-lg-6" style="background-color: white; border-radius: 4px;">
        <h2>Log in</h2>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs" style="padding: 16px;">
            <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>
          <div class="form-actions" style="padding: 16px;">
            <%= f.button :submit, "Log in", class: "standard-btn"%>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<%= render "devise/shared/links" %>
